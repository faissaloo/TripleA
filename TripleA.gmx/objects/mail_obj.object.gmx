//Drawing the email system
if GUI_open=true //If the GUI should be open then...
{
    //Shadow
    for(i=0;i&lt;30;i+=1)
    {
        draw_set_alpha(0.01)
        draw_roundrect(((room_width/8)*1)-i+10,((room_height/8)*1)-i+10,((room_width/8)*7)+i,((room_height/8)*7)+i,false)
    }
    draw_set_alpha(1)
    //Basic GUI
    //Main window
    //Buttons
    draw_set_color(c_silver)
    draw_roundrect((room_width/8)*1,((room_height/8)*1),(room_width/8)*7,((room_height/8)*7),false)
    draw_set_color(c_black)
    draw_roundrect((room_width/8)*1,((room_height/8)*1),(room_width/8)*7,((room_height/8)*7),true)
    
    //Window Handle
    draw_set_color(c_black)
    draw_rectangle((room_width/8)*1,((room_height/8)*1),(room_width/8)*7,((room_height/8)*1.25),false)
    //draw_rectangle((room_width/8)*1,((room_height/8)*1.1),(room_width/8)*7,((room_height/8)*1.30),false)
    //Outline
    draw_set_color(c_black)
    draw_rectangle((room_width/8)*1,((room_height/8)*1),(room_width/8)*7,((room_height/8)*1.25),true)
    //Title for handle
    draw_set_color(c_white)
    draw_text((room_width/8)*1.1,((room_height/8)*1.01),"Nocturnal - Inbox")
    
    //Draw background for text
    draw_set_color(c_white)
    draw_rectangle((room_width/8)*2,((room_height/8)*2),(room_width/8)*6.8,((room_height/8)*6.8),false)
    //Outline for background
    draw_set_color(c_black)
    draw_rectangle((room_width/8)*2,((room_height/8)*2),(room_width/8)*6.8,((room_height/8)*6.8),true)
    //Message body
    if ds_list_size(email_list_title)&gt;0
    {
        draw_text((room_width/8)*2,((room_height/8)*2),ds_list_find_value(email_list_body,message_index))
    }
    //
    //Text
    draw_set_color(c_black)
    for(i=range_begin;i&lt;ds_list_size(email_list_title);i+=1)
    {
        if i-range_begin&lt;18
        {
            draw_text((room_width/8)*1.15,((room_height/8)*2)+((i-range_begin)*24),ds_list_find_value(email_list_sender,i))
            draw_text((room_width/8)*1.15,((room_height/8)*2)+((i-range_begin)*24)-12,ds_list_find_value(email_list_title,i)) //Above the sender name
            draw_line((room_width/8)*1.15,((room_height/8)*2)+(((i-range_begin)+0.7)*24)-2,(room_width/8)*2,((room_height/8)*2)+(((i-range_begin)+0.7)*24)-2)
            //Check for clicks
            if mouse_check_button(mb_left)=true and mouse_x&gt;(room_width/8)*1.1 and mouse_x&lt;(room_width/8)*2 and mouse_y&lt;((room_height/8)*2)+(((i-range_begin)+0.7)*24) and mouse_y&gt;((room_height/8)*2)+((((i-range_begin)-1)+0.7)*24)
            {
                message_index=i
            }
        }
    }
    
    //Scrollbar
    //Outline
    draw_set_color(c_black)
    draw_rectangle((room_width/8)*1.02,((room_height/8)*1.8),(room_width/8)*1.13,((room_height/8)*6.9),true)
    draw_set_color(make_color_rgb(245,241,222))
    //Scrollbar
    //draw_button((room_width/8)*1.02,((room_height/8)*1.8),(room_width/8)*1.13,((room_height/8)*(scrollbar+1)),true) 
    //Scrollbar buttons
    draw_set_color(make_color_rgb(245,241,222))
    draw_button((room_width/8)*1.02,((room_height/8)*1.8),(room_width/8)*1.14,((room_height/8)*2.0),true)
    draw_set_color(c_black)
    draw_text((room_width/8)*1.05,((room_height/8)*1.8),'/\')
    //
    if mouse_x&gt;(room_width/8)*1.02 and mouse_y&gt;((room_height/8)*1.8) and mouse_x&lt;(room_width/8)*1.14 and mouse_y&lt;((room_height/8)*2.0) and mouse_check_button_pressed(mb_left)=true 
    {
        //Scroll down
        if range_begin!=0
        {
            range_begin-=1
        }
    }
    //
    draw_set_color(make_color_rgb(245,241,222))
    draw_button((room_width/8)*1.02,((room_height/8)*6.7),(room_width/8)*1.14,((room_height/8)*6.9),true)
    draw_set_color(c_black)
    draw_text((room_width/8)*1.05,((room_height/8)*6.7),'\/')
    //
    if mouse_x&gt;(room_width/8)*1.02 and mouse_y&gt;((room_height/8)*6.7) and mouse_x&lt;(room_width/8)*1.14 and mouse_y&lt;((room_height/8)*6.9) and mouse_check_button_pressed(mb_left)=true 
    {
        //Scroll up
        if range_begin&lt;ds_list_size(email_list_title)-18
        {
            range_begin+=1
        }
    }
}
